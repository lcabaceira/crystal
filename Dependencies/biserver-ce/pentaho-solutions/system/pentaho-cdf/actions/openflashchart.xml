<chart>
	<!-- Define the chart type -->	
	<chart-type>{CHARTTYPE}</chart-type>
	<!-- Specify the orientation of the bars -->
	<!-- Don't user for now, pie charts only works with this is not set -->
	<!--orientation>{ORIENTATION}</orientation-->
	<!-- Specify the 3D-ness of the bars -->
	<is-3D>{IS3D}</is-3D>
	<!-- Specify if the bars are stacked -->
	<is-stacked>{ISSTACKED}</is-stacked>	
	    
	<url-template>OpenFlashChartComponent.prototype.onClick</url-template>
	
	<interior-gap>{INTERIORGAP}</interior-gap> 
	
	<!-- Specify the title of the chart -->
	<title>{TITLE}</title>

	<!-- Specify the location of the title -->
	<title-position>TOP</title-position>
	
	<animate>true</animate>

	<!-- Specify the font of the title -->
	<title-font>
		<font-family>Arial</font-family>
		<size>12</size>
		<is-bold>true</is-bold>
		<is-italic>false</is-italic>
	</title-font>
	<subtitles>
	  <subtitle>{SUBTITLE}</subtitle>
	</subtitles>

    <!-- General Chart Propeties --> 
	<chart-background type="color">{BACKGROUNDCOLOR}</chart-background>
	<plot-background type="color">#EEEEEE</plot-background>
	<border-visible>false</border-visible>
	<border-paint>#000000</border-paint>

	<!--  X-Axis properties -->
	<domain-title-font>
      <font-family>Arial</font-family>
	  <size>10</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</domain-title-font>
	<domain-tick-font>
      <font-family>Arial</font-family>
	  <size>10</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</domain-tick-font>	
	<domain-label-rotation>{DOMAINLABELROTATION}</domain-label-rotation>
	<domain-label-rotation-dir>{DOMAINLABELROTATIONDIR}</domain-label-rotation-dir>

	<!--  Y-Axis properties -->
	<range-title-font>
      <font-family>Arial</font-family>
	  <size>10</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
	</range-title-font>
    <range-tick-format>{TOOLTIPYFORMAT}</range-tick-format>
    <range-tick-font>
      <font-family>Arial</font-family>
	  <size>10</size>
	  <is-bold>false</is-bold>
	  <is-italic>false</is-italic>	
    </range-tick-font>

	<!-- Specify is the chart legend should be shown -->
	   <include-legend>{INCLUDELEGEND}</include-legend> 
       <legend-font>
      <font-family>{LEGENDFONTFAMILY}</font-family>
	  <size>{LEGENDFONTSIZE}</size>
	  <is-bold>{LEGENDFONTISBOLD}</is-bold>
	  <is-italic>{LEGENDFONTISITALIC}</is-italic>
       </legend-font> 

	<!-- Specify the color palette for the chart -->
	<color-palette>
		<color>#387179</color>
		<color>#626638</color>
		<color>#A8979A</color>
		<color>#B09A6B</color>
		<color>#772200</color>
		<color>#C52F0D</color>
		<color>#123D82</color>
		<color>#4A0866</color>
		<color>#445500</color>
		<color>#FFAA00</color>
		<color>#1E8AD3</color>
		<color>#AA6611</color>
		<color>#772200</color>
	</color-palette>
	
	<data>
		
		<data-orientation>columns</data-orientation>
	</data>	

		
</chart>